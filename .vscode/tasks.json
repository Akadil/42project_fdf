{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "headers",
                "-I",
                "mlx_linux",
                "-Wall",
                "-Wextra",
                "-Werror",
                "${workspaceFolder}/srcs/*.c",
                "${workspaceFolder}/srcs/utils/*.c",
                "${workspaceFolder}/srcs/parsing/*.c",
                "${workspaceFolder}/srcs/parsing/utils/*.c",
                "${workspaceFolder}/srcs/rendering/*.c",
                "${workspaceFolder}/srcs/rendering/utils/*.c",
                "-o",
                "${workspaceFolder}/fdf",
                "-Llibft",
                "-lft",
                "-Lmlx_linux",
                "-lmlx_Linux",
                "-L/usr/lib",
                "-lXext",
                "-lX11",
                "-lm",
                "-lz"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}